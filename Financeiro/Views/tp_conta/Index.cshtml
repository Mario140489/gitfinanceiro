@model IEnumerable<Financeiro.Models.tp_conta>



<h6>Tipo Conta</h6>
<hr class="corpadrao" />
<table class="table table-striped table-hover table-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fundos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.investimento)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fundos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.investimento)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idtp_conta }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idtp_conta })
            </td>

        </tr>
    }
    <tr>
        @Html.Action("Create")
    </tr>

</table>
@section scripts{
  <script type="text/javascript">
      $("#descricao").keyup(salvarlinha);
      function salvarlinha() {
          $("form").submit();
      }

      
    </script>
    }