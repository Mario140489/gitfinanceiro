@model IEnumerable<Financeiro.Models.tp_conta>
<div class="modal-header pigendo-secondary">
    <h6 class="modal-title">Tipos de contas</h6>
    <button type="button" class="close" data-dismiss="modal">
        <span class="fa fa-close" style="color:red"></span>
    </button>
</div>
<div class="modal-body pigendo-primary">
    <a class="btn btn-primary btn-sm" data-toggle="collapse" role="button" aria-expanded="true" href="#lista" id="btnnovotpc"><span class="fa fa-plus"> Adicionar novo tipo de conta</span></a>
    <p></p>
    <div id="lista">
        <table class="table table-striped table-hover table-sm">
            <tr class="thead-dark">
                <th>
                    @Html.DisplayNameFor(model => model.descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fundos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.investimento)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fundos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.investimento)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.idtp_conta }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.idtp_conta })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {

            $("#btnnovotpc").click(function () {
                $("#lista").remove();
            });


            });
    </script>
}