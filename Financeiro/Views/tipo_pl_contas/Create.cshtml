@model Financeiro.Models.tipo_pl_contas
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" col-12 form-horizontal">
        <p></p>
        <h5>novo tipo de plano de contas</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="modal-footer p-2">
            <div class="form-group m-1 col-12 text-right">
                <div class="col-md-offset-2 col-md-12">
                    <button class="btn btn-sm btn-primary"><span class="fa fa-save"></span> Salvar</button>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Index")"><span class="fa fa-sign-out"></span> Sair</a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
