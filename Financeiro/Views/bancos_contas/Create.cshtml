@model Financeiro.Models.bancos_contas

<div>
    <h6>
        Nova conta <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:crimson;">
            <span aria-hidden="true">&times;</span>
        </button>
    </h6>
</div>
<hr class="corpadrao" />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group form-inline">
        @Html.LabelFor(model => model.descricao, "Descrição:", htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control form-control-sm col-sm-12 col-md-8 col-lg-10 col-xl-10" } })
        <div>
            @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
            
        </div>
    </div>
    <div class="form-group form-inline">
        @Html.LabelFor(model => model.bancos_id, "Bancos:", htmlAttributes: new { @class = "" })
        @Html.DropDownList("bancos_id",null, htmlAttributes: new { @class = "form-control" })
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

    }
}