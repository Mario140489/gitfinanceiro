@model IEnumerable<Financeiro.Models.bancos_contas>
@using X.PagedList;
@using X.PagedList.Mvc;

<table class="table table-striped table-hover table-sm table-responsive-sm table-responsive-md table-responsive-lg table-responsive-xl">
    <tr class="thead-dark corpadrao">
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bancos.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tp_conta.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.conta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.agencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saldo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bancos.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tp_conta.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.conta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.agencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saldo)
            </td>
            <td>
                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Edit","bancos_contas",new { id = item.bancos_contas_id })" data-toggle="tooltip" data-placement="top" title="Editar"><span class="oi oi-pencil"></span></a>
                <a href="#" class="btn btn-outline-info btn-sm btndetalhes" id="btnteste" data-value="@item.bancos_contas_id " data-toggle="tooltip" data-placement="top" title="Detalhes">
                    <span class="oi oi-list"></span>
                </a>
                <a class="btn btn-outline-danger btn-sm" href="@Url.Action("Delete","bancos_contas",new { id = item.bancos_contas_id })" data-toggle="tooltip" data-placement="top" title="Excluir"><span class="oi oi-x"></span></a>
            </td>
        </tr>
    }

</table>
