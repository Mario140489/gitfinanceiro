
@using PagedList;
@using PagedList.Mvc;
@using PagedList;
@using PagedList.Mvc;
<h4><span class="fa fa-money"></span> Bancos</h4>
<div class="row">
    <div class="col-md-6 col-9">

        <form class="form-inline m-1">
            <div class="input-group row col-12 col-md-7">
                <input type="text" class="form-control form-control-sm" id="Buscar" name="Buscar" placeholder="Nome do banco">
                <div class="input-group-append">
                    <input type="submit" value="Pesquisar" id="Pesquisar" class="btn btn-default btn-sm" />
                </div>
            </div>
           
        </form>

    </div>
    <div class="col-md-6 text-right col-3">
        <a href="#" class="btn btn-sm btn-primary btnnovo m-1"><span class="fa fa-plus"></span> Adicionar conta</a>
    </div>
    <div class="col-md-12">
        @Html.Action("Listar")
    </div>
    <div class="modal fade" data-backdrop="static" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" id="teste">
              
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnsair').click(limpar);
            function limpar() {
                $('#teste2').html('');
            }

            $(".btndetalhes").click(function () {
                var id = $(this).data("value");
                $("#teste").load("/bancos/Details/" + id,
                    function () {
                        $("#exampleModalCenter").modal("show");
                    }
                );

            });
            $(".btnnovo").click(function () {
                var id = $(this).data("value");
                $("#teste").load("/bancos/Create/",
                    function () {
                        $("#exampleModalCenter").modal("show");
                    }
                );

            });
            $(".btnedit").click(function () {
                var id = $(this).data("value");
                $("#teste").load("/bancos/Edit/" + id,
                    function () {
                        $("#exampleModalCenter").modal("show");
                    }
                );

            });
            $(".btndelete").click(function () {
                var id = $(this).data("value");
                $("#teste").load("/bancos/Delete/" + id,
                    function () {
                        $("#exampleModalCenter").modal("show");
                    }
                );

            });
            //$(".btnnovo").click(function () {
            // $("#teste2").load("",
            // function () {
            //  $("#exampleModalCenter").modal("show");
            // }
            // );

            //});

        });
    </script>
}