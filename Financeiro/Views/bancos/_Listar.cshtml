@model PagedList.IPagedList<Financeiro.Models.bancos>
@using PagedList;
@using PagedList.Mvc;
    <table class="table table-striped table-hover table-responsive-lg   table-sm">
        <thead class="pigendo-secundary text-light">
            <tr class="">
                <th>
                    Banco
                </th>
                <th style="text-align:center">

                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td >
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td align="right">
                    <a href="#" class="btn btn-primary  btn-sm btnedit" id="btnedit" data-value="@item.bancos_id" data-toggle="tooltip" data-placement="top" title="Editar">
                        <span class="fa fa-pencil"></span> 
                    </a>
                    <a href="#" class="btn btn-danger btn-sm btndelete" id="btndelete" data-value="@item.bancos_id " data-toggle="tooltip" data-placement="top" title="Excluir">
                        <span class="fa fa-trash"></span> 
                    </a>
                </td>
            </tr>
        }

    </table>
<div class="row" style="font-size:small">
    <div class="col-6">
        @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina, ViewBag.ativo, ViewBag.inativo }))
    </div>
    <div class="col-6" style="text-align:right">
        Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber ) de @Model.PageCount
    </div>
</div>
