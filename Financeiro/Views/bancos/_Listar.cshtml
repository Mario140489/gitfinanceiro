@model PagedList.IPagedList<Financeiro.Models.bancos>
@using PagedList;
@using PagedList.Mvc;
<table class="table table-striped table-hover table-sm">
    <tr class="thead-dark corpadrao" >
        <th>
            Banco
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td align="right">
                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit","bancos",new { id = item.bancos_id })" data-toggle="tooltip" data-placement="top" title="Editar"><span class="fa fa-pencil"></span> Editar</a>
                <a href="#" class="btn btn-info btn-sm btndetalhes" id="btnteste" data-value="@item.bancos_id" data-toggle="tooltip" data-placement="top" title="Detalhes">
                    <span class="fa fa-list"></span> Detalhes
                </a>
                <a href="#" class="btn btn-danger btn-sm btndelete" id="btndelete" data-value="@item.bancos_id" data-toggle="tooltip" data-placement="top" title="Excluir">
                    <span class="fa fa-minus"></span> Excluir
                </a>
            </td>
        </tr>
    }

</table>
<div class="row" style="font-size:small">
    <div class="col-6">
        @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina, ViewBag.ativo, ViewBag.inativo }))
    </div>
    <div class="col-6" style="text-align:right">
        Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber ) de @Model.PageCount
    </div>
</div>
