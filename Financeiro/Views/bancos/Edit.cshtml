@model Financeiro.Models.bancos
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h6>Novo banco</h6>
        <hr class="corpadrao" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group espaco_form">
            @Html.HiddenFor(model => model.bancos_id, new { htmlAttributes = new { @class = "form-control form-control-sm col-md-5 col-lg-5", @style = "Hidden" } })
            @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label col-md-2 col-form-label-sm" })
            <div class="col-md-10 espaco_form">
                @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr class="corpadrao" />
        <div class="form-group col-12 text-right">
            <div class="col-md-offset-2 col-md-12">
                <button class="btn btn-sm btn-primary"><span class="fa fa-save"></span> Salvar</button>
                <a class="btn btn-sm btn-danger" href="#" data-dismiss="modal"><span class="fa fa-sign-out"></span> Sair</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
